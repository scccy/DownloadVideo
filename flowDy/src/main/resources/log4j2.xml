<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" monitorInterval="60">
    <Properties>
        <Property name="App">downLoadVideo</Property>
        <Property name="logDir">/home/project/DownLoadVideo/service-logs</Property>
        <Property name="splitSize">100 MB</Property>
    </Properties>

    <Appenders>
        <!-- 输出控制台日志的配置 -->
        <Console name="console" target="SYSTEM_OUT">
            <ThresholdFilter level="INFO" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n"/>
        </Console>

        <!-- 打印出所有的信息，每次大小超过size，则这size大小的日志会自动存入按年份-月份建立的文件夹下面并进行压缩，作为存档 -->
        <RollingFile name="infoLog" fileName="${logDir}/${App}-info.log"
                     filePattern="${logDir}/${App}-info-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS z} [%thread] %-5level %logger{36} %L %M - %msg%xEx%n"/>
            <Policies>
                <!-- 每15天滚动一次 -->
                <TimeBasedTriggeringPolicy interval="15" modulate="true"/>
                <!--按大小分-->
                <SizeBasedTriggeringPolicy size="${splitSize}"/>
            </Policies>
            <Filters>
                <!-- 只记录info和warn级别信息 -->
                <ThresholdFilter level="info" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
            <!-- 保留6个周期的日志，超过会删除 -->
            <DefaultRolloverStrategy max="6"/>
        </RollingFile>

        <!-- 存储所有error信息 -->
        <RollingFile name="errorLog" fileName="${logDir}/${App}-error.log"
                     filePattern="${logDir}/${App}-error-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS z} [%thread] %-5level %logger{36} %L %M - %msg%xEx%n"/>
            <Policies>
                <!-- 每15天滚动一次 -->
                <TimeBasedTriggeringPolicy interval="15" modulate="true"/>
                <!--按大小分-->
                <SizeBasedTriggeringPolicy size="${splitSize}"/>
            </Policies>
            <Filters>
                <!-- 只记录error级别信息 -->
                <ThresholdFilter level="error" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
            <!-- 保留6个周期的日志，超过会删除 -->
            <DefaultRolloverStrategy max="6"/>
        </RollingFile>

        <!-- 单独的 MyBatis-Plus 日志文件 -->
        <RollingFile name="mybatisPlusLog" fileName="${logDir}/${App}-mybatisPlus.log"
                     filePattern="${logDir}/${App}-mybatisPlus-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS z} [%thread] %-5level %logger{36} %L %M - %msg%xEx%n"/>
            <Policies>
                <!-- 每15天滚动一次 -->
                <TimeBasedTriggeringPolicy interval="15" modulate="true"/>
                <!--按大小分-->
                <SizeBasedTriggeringPolicy size="${splitSize}"/>
            </Policies>
            <Filters>
                <!-- 只记录debug级别信息 -->
                <ThresholdFilter level="debug" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
            <!-- 保留6个周期的日志，超过会删除 -->
            <DefaultRolloverStrategy max="6"/>
        </RollingFile>

    </Appenders>

    <Loggers>
        <!-- root logger 配置,全局配置，默认所有的Logger都继承此配置 -->
        <!-- AsyncRoot - 异步记录日志 - 需要LMAX Disruptor的支持 -->
        <Root level="info">
            <AppenderRef ref="infoLog"/>
            <AppenderRef ref="errorLog"/>
            <AppenderRef ref="console"/>
        </Root>

        <!-- 第三方的软件日志级别 -->
        <Logger name="org.springframework" level="info" additivity="true"/>
        <Logger name="org.mybatis" level="info"/>

        <!-- 配置 MyBatis SQL 日志级别 -->
        <Logger name="com.scccy.downloadDy.mapper" level="debug" additivity="true">
            <AppenderRef ref="mybatisPlusLog"/>
            <AppenderRef ref="console"/>
        </Logger>

        <Logger name="org.apache.ibatis" level="debug" additivity="true">
            <AppenderRef ref="console"/>
        </Logger>
    </Loggers>
</Configuration>
